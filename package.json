{
  "name": "git-ai-commits",
  "publisher": "loviver",
  "displayName": "git-ai-commits",
  "description": "Suggest commits with AIs",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "repository": {
    "type": "git",
    "url": "git branch -M main"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "git-ai-commits.requestSuggestions",
        "title": "Generate AI-Powered Commit Suggestions",
        "category": "Git AI Commits",
        "description": "Analyze code changes and generate commit messages using AI."
      },
      {
        "command": "git-ai-commits.openSettings",
        "title": "Open Git AI Commits Settings",
        "category": "Git AI Commits",
        "description": "Configure AI settings for generating commit messages."
      }
    ],
    "configuration": {
      "title": "Git AI Commits",
      "properties": {
        "gitAiCommits.apiKey": {
          "type": "string",
          "default": "",
          "description": "API Key para autenticarse con Gemini AI",
          "scope": "global"
        },
        "gitAiCommits.autoCommit": {
          "type": "boolean",
          "default": false,
          "description": "Allow Git AI Commits to automatically commit changes.",
          "scope": "global"
        },
        "gitAiCommits.obfuscateWords": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Lista de palabras que ser√°n ofuscadas en los commits generados.",
          "scope": "global"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "yarn run check-types && yarn run lint && node esbuild.js",
    
    "watch-dev": "npm-run-all -p watch:esbuild watch:extension",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:extension": "node installExtension.js --watch",

    "watch": "npm-run-all -p watch:* watch:extension",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "watch-tests": "tsc -p . -w --outDir out",
    "package": "yarn run check-types && yarn run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.0",
    "eslint": "^9.21.0",
    "nodemon": "^3.1.9",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "simple-git": "^3.27.0"
  }
}
